<div class="subscribe-line subscribe-line-image" data-parallax="true" style="background-image: url('../assets/newsletter.jpg');">
  <div class="container">
    <div class="row">
      <div class="col-md-6 ml-auto mr-auto">
        <div class="text-center">
          <h3 class="title">¡Suscríbete para recibir las mejores promociones!</h3>
        </div>
        <div class="card card-raised card-form-horizontal">
          <div class="card-body">
            <%= form_with(url: create_newsletter_path, method: :post) do |form| %>
              <div class="row">
                <div class="col-sm-8">
                  <span class="bmd-form-group">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">
                        <i class="material-icons">mail</i>
                        </span>
                      </div>
                      <%= form.email_field :email, autocomplete: 'off', class: 'form-control', placeholder: 'Tú Email...' %>
                    </div>
                  </span>
                </div>
                <%= form.submit 'Subscribirme', class: 'btn btn-primary btn-raised' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
