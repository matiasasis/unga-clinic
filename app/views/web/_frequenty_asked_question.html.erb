<div class="section section-comments">
  <% @faqs.where(:show => true).each do |faq| %>
    <div class="row" >
      <div class="col-md-8 ml-auto mr-auto">
        <div class="media-area">
          <div class="media">
            <a class="float-left">
            </a>
            <div class="media-body">
              <h4 class="media-heading">
                <%= faq.title %>
              </h4>
              <h6 class="text-muted"></h6>
              <p> 
                <%= faq.answer %> 
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>