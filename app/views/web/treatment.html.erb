<div class="treatment product-page">
  <div class="page-header header-filter header-extra-small" data-parallax="true" style="background-image: url('../assets/landingpage.jpg');">
  </div>
  <div class="section">
    <div class="container">
      <div class="main main-raised main-product">
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <%= render 'web/partials/carousel', pictures: @treatment.pictures %>
          </div>
          <div class="col-md-6 col-sm-6">
            <h2 class="title"><%= @treatment.name %></h2>
            <div class="description mt-4">
              <p><%= @treatment.description %></p>
              <div>
                <div class="stats">
                  <i class="material-icons">face</i>
                  <span class="ml-1"><%= @treatment.professional.to_s %></span>
                </div>
                <div class="stats ml-auto">
                  <i class="material-icons">schedule</i>
                  <span class="ml-1"><%= @treatment.duration_min %> min</span>
                </div>
              </div>
            </div>
            <div class="row pull-right mt-4">
              <a href="<%= book_wa_link(@treatment) %>" class="btn btn-primary btn-round btn-block" target="_blank">
                <i class="material-icons">perm_phone_msg</i> Reservar tratamiento
              </a>
            </div>
          </div>
        </div>
      </div>
      <%= render 'web/treatments/treatment_features' %>
      <%= render 'web/treatments/related_treatments', related_treatments: @related_treatments %>
    </div>
  </div>
</div>
