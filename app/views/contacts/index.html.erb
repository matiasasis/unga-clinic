<div class="row" id="contacts">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="tools float-right">
          <%= link_to "Nuevo #{t("activerecord.models.contact.one")}", new_contact_path, class: 'btn btn-info' %>
        </div>
        <h1 class="card-title"><%= t("activerecord.models.contact.multiple") %></h1>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="text-primary">
            <tr>
              <th><%= t("activerecord.attributes.contact.name") %></th>
              <th><%= t("activerecord.attributes.contact.email") %></th>
              <th><%= t("activerecord.attributes.contact.phone") %></th>
              <th><%= t("activerecord.attributes.contact.message") %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
              <% @contacts.each do |contact| %>
                <tr>
                  <td><%= contact.name %></td>
                  <td><%= contact.email %></td>
                  <td><%= contact.phone %></td>
                  <td><%= contact.message %></td>
                  <td class="text-right">
                    <%= link_to_icon '', edit_contact_path(contact), 'btn btn-sm btn-warning', 'far fa-edit' %>
                    <%= delete_resource_icon contact %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= will_paginate @contacts, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
      </div>
    </div>
  </div>
</div>
