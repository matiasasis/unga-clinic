<%= form_with(model: newsletter) do |form| %>
  <%= render 'layouts/backoffice/notify_form_error', model: :newsletter, errors: newsletter.errors %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit 'Aceptar', class: 'btn btn-fill btn-success animation-on-hover mr-2' %>
    <%= link_to 'Volver', newsletters_url, class: 'btn btn-simple text-white' %>
  </div>
<% end %>
