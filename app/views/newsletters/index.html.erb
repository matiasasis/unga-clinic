<div class="row" id="newsletters">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="tools float-right">
          <%= link_to "Nuevo #{t("activerecord.models.newsletter.one")}", new_newsletter_path, class: 'btn btn-info' %>
        </div>
        <h1 class="card-title"><%= t("activerecord.models.newsletter.multiple") %></h1>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class="text-primary">
            <tr>
              <th><%= t("activerecord.attributes.newsletter.email") %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
              <% @newsletters.each do |newsletter| %>
                <tr>
                  <td><%= newsletter.email %></td>
                  <td class="text-right">
                    <%= link_to_icon '', edit_newsletter_path(newsletter), 'btn btn-sm btn-warning', 'far fa-edit' %>
                    <%= delete_resource_icon newsletter %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= will_paginate @newsletters, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
      </div>
    </div>
  </div>
</div>
